<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Eletek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >


        <ImageView
            android:id="@+id/elet1"
            android:layout_width="104dp"
            android:layout_height="111dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/elet2"
            android:layout_width="104dp"
            android:layout_height="111dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/elet3"
            android:layout_width="104dp"
            android:layout_height="111dp"
            android:src="@drawable/heart" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Eletek"
        android:layout_marginTop="20dp"
        android:hint="Várom a Tippet"
        android:inputType="number"
        android:textSize="40dp"
        android:id="@+id/tipp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipp"
        android:layout_marginTop="20dp"
        android:id="@+id/ellenorzes"
        android:text="Tippelek"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ellenorzes"
        android:id="@+id/eredmeny"
        android:layout_marginTop="20dp"
        android:text="Eredmény:"
        />



</RelativeLayout>